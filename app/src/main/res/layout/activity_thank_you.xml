<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThankYouActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu"
            android:gravity="center_horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="Thank You"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="For Your Order"
            android:textColor="#2C2C2C"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Order Number: #913FSX11"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"
            app:lottie_repeatCount="5"
            app:lottie_rawRes="@raw/deliver" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center_horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="ESTIMATED DELIVERY"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="Monday June 30, 2016"
            android:textColor="@color/black"
            android:textSize="14dp" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="32dp"
            android:background="@drawable/button_background"
            android:paddingVertical="8dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:text="Track Your Order Here"
            app:iconGravity="end" />




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Continue Shopping"
        android:layout_alignParentBottom="true"
        app:cornerRadius="0dp"
        app:iconGravity="end" />
</RelativeLayout>